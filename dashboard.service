[Unit]
Description=FastAPI Dashboard App
After=network.target

[Service]
#ExecStart=/usr/bin/uvicorn main:app --host 0.0.0.0 --port 3000 --log-level error --no-access-log
ExecStart=/srv/FastAPI-Dashboard/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 3000 --no-access-log
WorkingDirectory=/srv/FastAPI-Dashboard
Restart=on-failure
User=www-data
Group=www-data
#StandardOutput=null
#StandardError=journal
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
